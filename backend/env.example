# Example .env configuration for IBM watsonx.ai
# Copy this to .env and fill in your credentials

# Switch to IBM watsonx.ai
LLM_PROVIDER=watsonx

# IBM watsonx.ai Configuration
WATSONX_API_KEY=your_ibm_cloud_api_key_here
WATSONX_PROJECT_ID=your_watsonx_project_id_here
WATSONX_REGION=us-south
WATSONX_API_VERSION=2025-02-11
WATSONX_MODEL_ID=ibm/granite-3-8b-instruct

# MCP Server (keep your existing configuration)
MCP_BASE_URL=http://localhost:8080

# Optional: Keep Google credentials for fallback/celebrity API
GOOGLE_API_KEY=your_google_api_key_if_you_have_one

# Optional: Debug mode
DEBUG=false
